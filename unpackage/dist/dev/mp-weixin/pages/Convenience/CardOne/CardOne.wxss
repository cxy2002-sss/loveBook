.all {
  position: relative;
}
.all .title {
  width: 750rpx;
  height: 340rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.all .title .content {
  width: 600rpx;
  height: 300rpx;
  border: 1px solid #6365b7;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  color: #6365b7;
  align-items: center;
  border-radius: 30rpx;
}
.all .title .content .day {
  display: flex;
}
.all .title .content .day view:nth-child(1) {
  font-size: 40rpx;
}
.all .set {
  margin-left: 20rpx;
  color: #a6a6a6;
}
.all .setContent {
  background: white;
  padding: 0 20rpx;
}
.all .setContent .updateDay {
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.all .setContent .updateDay button {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 20rpx;
  background: #6365b7;
  color: white;
  margin-right: 0 !important;
}
.all .setContent .setFlow {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.all .setContent .setFlow .images image {
  width: 50rpx;
  height: 50rpx;
}
.all .setContent .setAche {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.all .setContent .setAche .images image {
  width: 50rpx;
  height: 50rpx;
}
.all .SetDay {
  position: absolute;
  width: 750rpx;
  height: 1540rpx;
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
  left: 0;
}
.all .SetDay .setDay {
  width: 600rpx;
  height: 200rpx;
  background: white;
  border: 1px solid #6365b7;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-radius: 30rpx;
}
.all .SetDay .setDay view:nth-child(1) {
  display: flex;
  justify-content: space-between;
}
.all .SetDay .setDay view:nth-child(1) picker {
  color: #a6a6a6;
}
.all .SetDay .setDay view:nth-child(2) {
  color: #a6a6a6;
}
.all .SetDay .setDay button {
  width: 100%;
  background: #6365b7;
  color: white;
}


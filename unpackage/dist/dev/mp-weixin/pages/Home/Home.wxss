.all {
  background: url("https://mp-ef64b579-45c7-4be3-847a-226e71feacf0.cdn.bspapp.com/cloudstorage/23f3f2be-2510-423a-bf8c-5d66acd64dfe.png") no-repeat;
  background-size: 750rpx;
  font-size: 35rpx;
}
.all .status_bar {
  height: 100%;
  width: 750rpx;
}
.all .status_bar .barText {
  padding-top: 40rpx;
  text-align: center;
  line-height: 100rpx;
  color: black;
}
.all .status_bar .togetherDay {
  position: relative;
  margin-top: 100rpx;
  width: 300rpx;
  height: 130rpx;
  background: rgba(245, 245, 245, 0.5);
  border-radius: 0 40rpx 40rpx 0;
}
.all .status_bar .togetherDay .title {
  text-align: center;
}
.all .status_bar .togetherDay .day view {
  position: absolute;
  top: 55rpx;
  left: 125rpx;
}
.all .status_bar .togetherDay .day image:nth-child(1) {
  position: absolute;
  top: 30rpx;
  width: 100rpx;
  height: 100rpx;
}
.all .status_bar .togetherDay .day image:nth-child(2) {
  position: absolute;
  top: 30rpx;
  left: 180rpx;
  width: 95rpx;
  height: 95rpx;
}
.all .status_bar .commemorationDay {
  margin: 100rpx 20rpx 20rpx 20rpx;
  height: 100rpx;
  border-radius: 20rpx;
  background: rgba(221, 222, 240, 0.7);
  display: flex;
  align-items: center;
}
.all .status_bar .commemorationDay view {
  color: #6365b7;
  width: 65%;
  margin-left: 20rpx;
}
.all .status_bar .commemorationDay .addEventDay {
  color: white;
  width: 100rpx;
  height: 50rpx;
  font-size: 20rpx;
  line-height: 50rpx;
  margin-right: 20rpx;
  width: 35%;
  border-radius: 30rpx;
  background-color: #6365b7;
}
.all .status_bar .nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: white;
  border-radius: 40rpx;
  height: 200rpx;
  margin: 20rpx;
}
.all .status_bar .nav .navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.all .status_bar .nav .navItem image {
  width: 100rpx;
  height: 100rpx;
}
.all .status_bar .EventDay {
  margin: 20rpx;
  background: white;
  border-radius: 30rpx;
  height: 350rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.all .status_bar .EventDay view {
  margin: 20rpx;
  color: #abb2bf;
}
.all .status_bar .EventDay button {
  color: #6365b7;
  border: 1px solid #6365b7;
  border-radius: 30rpx;
  width: 300rpx;
  height: 50rpx;
  font-size: 20rpx;
  line-height: 50rpx;
}
.all .status_bar .DayContent {
  margin: 20rpx;
  background: white;
  border-radius: 30rpx;
}
.all .status_bar .DayContent .dayTitle {
  display: flex;
  align-items: center;
  margin: 20rpx;
}
.all .status_bar .DayContent .dayTitle .bigTitle {
  color: #6365b7;
  font-size: 40rpx;
  margin-right: 25rpx;
}
.all .status_bar .DayContent .dayTitle .minTitle {
  color: #abb2bf;
  font-size: 20rpx;
}
.all .status_bar .DayContent .content {
  margin: 20rpx;
}
.all .status_bar .DayContent .content view:nth-child(2) {
  font-size: 20rpx;
}
.all .status_bar .DayContent .images {
  margin: 10rpx;
  display: flex;
  flex-wrap: wrap;
}
.all .status_bar .DayContent .images image {
  margin: 10rpx;
  flex: 1;
}


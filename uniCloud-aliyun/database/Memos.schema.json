// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["title","content"],
	"permission": {
		"read": "doc.user_id==auth.uid",
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"title":{
			"bsonType": "string",
			"title": "标题"
		},
		"content":{
			"bsonType": "string",
			"title": "内容"
		},
		"user_id":{
			"foreignKey": "uni-id-users._id",
			"bsonType": "string",
			"forceDefaultValue":{
				"$env": "uid"
			}
		}
	}
}